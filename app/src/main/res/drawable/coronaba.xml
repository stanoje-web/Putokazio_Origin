<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />
            <gradient
                android:centerY="0.75"  android:angle="90" />
            <stroke android:width="2dp" android:color="#8F2020" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp" />
                <gradient android:startColor="#8F2020" android:endColor="#8F2020"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="#8F2020" />
            </shape>
        </clip>
    </item>
</layer-list>